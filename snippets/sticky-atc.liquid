window.addEventListener("scroll", function() {
  var stickyAdtcContainer = document.querySelector(".tw-sticky_adtc_container");
  var offset = window.pageYOffset;
  if (offset > 700) {
    stickyAdtcContainer.style.display = "block";
  } else {
    stickyAdtcContainer.style.display = "none";
  }
});
