<div class="tw-sticky_adtc_container" id="sc-atc">
  <div class="tw-inner_desktop white_bg">
    <div class="tw-container product_details_wrap">
      <div class="tw-product_details_name ">
        <div class="tw-product_image_wrap">
          {% if product.featured_image %}
            <img
              class="tw-sticky-bar-img"
              src="{{ product.featured_image.src | img_url: 'medium' }}"
              alt="{{ product.featured_image.alt | escape }}"
            >
          {% endif %}
        </div>
        <div class="tw-product_name_wrap">
          <p class="tw-product_name">{{ product.title | escape }}</p>
        </div>
      </div>

      <!-- price-section-start-here -->

      <div class="tw-product_details_cart d-flex align-items-center">
        <div class="tw-product_details_price mr-3">
          {% if product.compare_at_price > product.price %}
            <div class="tw-asCompared">
              <del
                ><span id="tw-ComparePrice">
                  {{ product.compare_at_price | money }}
                </span></del
              >
            </div>
          {% endif %}
          <span id="tw-ProductPrice" class="tw-atc-updated"> </span>
        </div>
      </div>
      <!-- price-section-end-here -->

      <!-- variant selector  Start -->
      <div class="tw-product-variant">
        <p class="tw-select-variant-price">Select Variant</p>
        <select id="tw-VariantSelector">
          {% for variant in product.variants %}
            <option
              data-variantPrice="{{ variant.price | divided_by: 100}}"
              data-productAvailable="{{ variant.available }}"
              value="{{ variant.id }}"
            >
              {{ variant.title }}
            </option>
          {% endfor %}
        </select>
      </div>
      <!-- variant selector  End -->

      <!-- Quantity button starts here -->
      <div class="tw-quantity">
        <p class="tw-quantity-sec">Quantity</p>
        <button disabled class="tw-minus-btn">-</button>
        <input type="number" min="1" max="100" value="1" id="tw-updated-value-input">
        <button class="tw-plus-btn">+</button>
      </div>

